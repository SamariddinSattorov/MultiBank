<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bck1"
    tools:context=".TanlashOynasi">

    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp">

            <ImageView
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:src="@drawable/logo_bck">

            </ImageView>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="120dp">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/kreditbutton"
            app:cardCornerRadius="20dp">


            <TextView
                android:textColor="#08afd1"
                android:textSize="19sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/kredit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#fff">

            </TextView>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/omonatbutton"
            app:cardCornerRadius="20dp">

            <TextView
                android:textSize="19sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#08afd1"
                android:text="@string/omonat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#fff">

            </TextView>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/taklif_button"
            app:cardCornerRadius="20dp">


            <TextView
                android:textColor="#08afd1"
                android:textSize="19sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/taklif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#fff">

            </TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>